<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/offset_medium"
    android:paddingVertical="@dimen/offset_medium">

    <TextView
        android:id="@+id/existingParent"
        style="@style/TextView.Subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Иван Иванов" />

    <TextView
        android:id="@+id/existingParentNickname"
        style="@style/TextView.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_600"
        tools:text="#346" />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="@dimen/icon_24"
        android:layout_height="@dimen/icon_24"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/offset_small"
        android:src="@drawable/ic_check" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:layout_marginBottom="@dimen/offset_medium">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/icon_92"
        android:layout_height="0dp"
        android:background="@color/grey_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="@dimen/icon_92"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/white_blur"/>

    <TextView
        android:id="@+id/name"
        style="@style/TextView.H6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/offset_medium"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Что нужно знать для того, чтобы рассказать о вич-инфекции ребенку" />

</androidx.constraintlayout.widget.ConstraintLayout>
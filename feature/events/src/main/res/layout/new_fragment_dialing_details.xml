<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/StandardToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/offset_large"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/progress"
                layout="@layout/include_progress" />

            <include
                android:id="@+id/precision"
                layout="@layout/include_precision" />

            <include
                android:id="@+id/time"
                layout="@layout/include_time"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/pieChart"
                layout="@layout/include_pie_chart"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/lineChartLayout"
                layout="@layout/include_line_chart"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/concurentsTitle"
                style="@style/TextView.OverLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/offset_medium"
                android:layout_marginTop="@dimen/offset_medium"
                android:text="Предложения"
                android:textColor="@color/grey_600" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/concurentsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_dialing"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/base"
                layout="@layout/include_text_3"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/scenario"
                layout="@layout/include_text_3"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>